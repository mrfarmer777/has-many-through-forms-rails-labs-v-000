<h1><%=@post.title%></h1>
<p>
  <%=@post.content%>
</p>

<h4>Comments:</h4>
<table>
  <% @post.comments.each do |comment|%>
    <tr>
      <td>
        <%=link_to comment.user.username, user_path(comment.user)%>
      </td>
      <td>
        <%=comment.content%>
      </td>
    </tr>
  <%end%>
</table>

<h4>Add a New Comment: </h4>

<%= form_for :comment do |f|%>
  <%=f.collection_select(:comment, :user_id, User.all, :id, "username")%>
  <%=f.text_field :content%>
  <%=f.submit%>
<%end%>


<h4>Active Users:</h4>
<ul>
  <% @post.users.each do |user|%>
    <li>
      <%=user.username%>
    </li>

  <%end%>
</ul>
