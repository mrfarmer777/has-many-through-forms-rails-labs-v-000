<h1><%=@post.title%></h1>
<p>
  <%=@post.content%>
</p>

<p>
  <ul>
    <%@post.categories.each do |cat|%>
      <li>
        <%=cat.name%>
      </li>
    <%end%>
  </ul>

</p>

<h4>Comments:</h4>
<table>
  <% @post.comments.each do |comment|%>
    <tr>
      <td>
        <%=link_to comment.user.username, user_path(comment.user)%>
      </td>
      <td>
        <%=comment.content%>
      </td>
    </tr>
  <%end%>
</table>

<h4>Add a New Comment: </h4>

<%=form_for :comment, url:"/comments", method: "POST" do |f|%>
  Create New User:<%=f.fields_for :user, @post.users.build do |user_fields|%>
    <%user_fields.text_field :username%>
  <%end%>
  User: <%=f.collection_select :user_id, User.all, :id, :username%>
  Content: <%=f.text_field :content%>
  <%=f.hidden_field :post_id, :value=> @post.id%>
  <%=f.submit %>
<%end%>



<h4>Active Users:</h4>
<ul>
  <% @post.users.each do |user|%>
    <li>
      <%=user.username%>
    </li>

  <%end%>
</ul>
